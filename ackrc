# color
--color

# sorting
--sort-files

# only search with case sensitivity if there is mixed case
--smart-case

# ignore dirs
--ignore-dir=coverage
--ignore-dir=doc
--ignore-dir=log
--ignore-dir=tmp
--ignore-dir=.bundle
--ignore-dir=.rvm
--ignore-dir=vcr_cassettes
--ignore-dir=data
--ignore-dir=db

# add filetypes
--type-add=ruby=.haml,.rake,.rsel,.builder
--type-add=html=.html.erb,.html.haml
--type-add=js=js.erb
--type-add=css=.sass,.less,.scss

# set filetypes
--type-set=javascript=.coffee
--type-set=textile=.textile

#ignore filetypes
--type-set=PDF=.pdf
--noPDF
